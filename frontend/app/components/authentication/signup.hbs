<div class="d-flex justify-content-center align-items-center">
  <div class="signup-form">
    <header>
      <h1>{{t 'auth.signup.signup'}}</h1>
    </header>
    {{#with (changeset this.userLoginForm this.UserValidation) as |newUser|}}

      <BsForm @model={{newUser}} @onSubmit={{this.createUser}} as |form|>

        <div class="signup-form-fields">
          <form.element id="username" class="" @controlType="text" @label={{t "auth.login.username" }}
                        @property="username" as |el|>
            <el.control autocomplete="username" placeholder={{t "auth.login.enter_username" }}></el.control>
          </form.element>
          {{#each newUser.errors as |err| }}
            {{#if (eq err.key "username")}}
              <BsAlert @type="danger" @fade={{true}}>
                {{err.validation}}
              </BsAlert>
            {{/if}}
          {{/each}}

          <form.element id="email" class="" @controlType="text" @label={{t "auth.signup.email" }} @property="email" as
                        |el|>
            <el.control autocomplete="email" placeholder="example@mail.com"></el.control>
          </form.element>
          {{#each newUser.errors as |err| }}
            {{#if (eq err.key "email")}}
              <BsAlert @type="danger" @fade={{true}}>
                {{err.validation}}
              </BsAlert>
            {{/if}}
          {{/each}}

          <form.element id="password" class="" @controlType="password" @label={{t "auth.login.password" }}
                        @property="password" as |el|>
            <el.control autocomplete="new-password" placeholder={{t "auth.login.enter_password" }}></el.control>
          </form.element>

          <form.element id="confirm-password" class="" @controlType="password" @label={{t
                  "auth.signup.repeat_password" }}
                        @property="passwordConfirmation" as |el|>
            <el.control placeholder={{t "auth.signup.repeat_password" }} autocomplete="new-password"></el.control>
          </form.element>

          <form.element id="invite-code" class="" @controlType="text" @label={{t "auth.signup.invite_code" }}
                        @property="inviteCode" as |el|>
            <el.control placeholder={{t "auth.signup.invite_code" }}></el.control>
          </form.element>
        </div>

        <BsButton class="btn btn-primary form-control mb-2" @type="submit" @defaultText={{t "auth.signup.signup" }}
                  @buttonType="submit"/>

        <p class="line-text"><span>{{t "auth.login.or" }}</span></p>

        <BsButton type="button" class="shadow-sm rounded btn-dark btn-linkedIn form-control mb-2" {{ on "click"
          this.authenticateWithLinkedIn}}>
          <span class="px-2">{{svg-jar "linkedIn-icon-2"}}</span> {{t "auth.signup.signup_third_party"
          authProvider="LinkedIn"}}
        </BsButton>

        <BsButton type="button" class="shadow-sm border rounded btn-light form-control mb-2" {{ on "click"
          this.authenticateWithGoogleImplicitGrant}}>
          <span class="px-2">{{svg-jar "google-icon"}}</span> {{t "auth.signup.signup_third_party" authProvider="Google"}}
        </BsButton>

        <BsButton type="button" class="shadow-sm rounded btn-dark btn-facebook form-control mb-2" {{ on "click"
          this.authenticateWithFacebook}}>
          <span class="px-2">{{svg-jar "facebook-icon-2"}}</span>{{t "auth.signup.signup_third_party"
          authProvider="Facebook"}}
        </BsButton>
      </BsForm>
    {{/with}}

    <div class="d-flex justify-content-center mt-3">
      <p>{{t 'auth.signup.link_to_login' htmlSafe=true}}</p>
    </div>
  </div>
</div>