<div id="chapter" class="p-4">
  <div {{did-insert (fn this.counterTimer)}}></div>
  <div class="breadcrumbs d-flex align-items-center">
    <LinkTo @route="index">
      {{svg-jar 'home_black_24dp'}}
    </LinkTo>
    <p class="m0">
      <LinkTo @route="index">
        {{t 'single_chapter.h5p.chapters'}}
      </LinkTo>
      /
      <span class="chapter-name">
        {{title-case this.model.name}}
      </span>
    </p>
  </div>
  <hr />
  {{#if (or this.model.contentId this.model.contentUri)}}
    <div class="row d-flex justify-content-center">
      <div class="col-lg-8">
        <H5p::Player
          @contentId={{this.model.contentId}}
          @location={{this.model.contentUri}}
          @onxAPIStatement={{this.onH5PPlayerXAPIEvent}}
        />
      </div>
    </div>
  {{/if}}
  <div class="row d-flex justify-content-center">
    <div class="col-lg-8">
      <div class="chapter-content">
        <div class="d-flex justify-content-between pt-2 pb-2 flex-wrap">
          <div class="chapter-title">
            <h4>
              {{title-case this.model.name}}
            </h4>
          </div>
          <div class="d-flex align-items-center flex-nowrap">
            <span class="pt-1">
              <Reaction::ChapterReaction
                @chapter={{this.model}}
                @canReact={{true}}
                @onChapterReactionChange={{this.onChapterReactionChange}}
              />
            </span>
            <div class="chapter-actions d-flex">
              <a href="#comments-section" class="pt-1 mr-1">
                {{svg-jar 'message' height='21px'}}
              </a>
              <Share @chapterName={{this.model.name}} />
              {{!-- {{svg-jar "more_vert_black_24dp"}} --}}
            </div>
          </div>
        </div>
        <div class="chapter-metadata">
          <p>
            {{t 'single_chapter.h5p.views' numViews=this.model.views}}
            ·
            {{format-date
              this.model.createdAt
              day='numeric'
              month='short'
              year='numeric'
            }}
          </p>
          <div class="chapter-tags-list">
            {{#each this.model.tags as |tag|}}
              <LinkTo @route="index" @query={{hash tags=tag.id}} class="tag">
                {{title-case tag.name}}
              </LinkTo>
            {{/each}}
          </div>
        </div>
        <div
          class="modal fade"
          id="modelId"
          tabindex="-1"
          role="dialog"
          aria-labelledby="modelTitleId"
          aria-hidden="true"
        >
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">
                  {{t 'labels.embed'}}
                </h5>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label={{t 'buttons.close'}}
                >
                  <span aria-hidden="true">
                    ×
                  </span>
                </button>
              </div>
              <div class="modal-body">
                <div class="form-group">
                  <pre id="frame" name="frame">
                    {{this.embedCode}}
                  </pre>
                  <CopyButton
                    @clipboardTarget="#frame"
                    @success={{this.onSuccess}}
                    @error={{this.onError}}
                  >
                    {{t 'buttons.copy_embed_code'}}
                  </CopyButton>
                  {{#if this.copied}}
                    <span class="badge badge-primary pt-2">
                      {{t 'labels.copied'}}
                    </span>
                  {{/if}}
                </div>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                >
                  {{t 'buttons.close'}}
                </button>
              </div>
            </div>
          </div>
        </div>
        <hr />
        <div class="single-chapter-creator mb-3">
          <LinkTo
            @route="profile.home"
            @model={{this.model.author.id}}
            class="text-dark"
          >
            {{#if this.model.author.profileUri}}
              <img
                src={{this.model.author.profileUri}}
                alt={{t 'single_chapter.h5p.creator_avatar'}}
                class="rounded-circle mr-2"
              />
            {{else}}
              <img
                src="/uploads/images/profile-placeholder.gif"
                alt={{t 'single_chapter.h5p.creator_avatar'}}
                class="rounded-circle mr-2"
              />
            {{/if}}
          </LinkTo>
          <div class="chapter-author">
            <LinkTo
              @route="profile.home"
              @model={{this.model.author.id}}
              class="text-dark"
            >
              <p>
                {{this.model.author.name}}
              </p>
            </LinkTo>
            {{! TODO: Add "verified" & "likes" to user model }}
            {{!-- {{svg-jar "verified-black-24dp" class="verified-icon" height="20px"}} --}}
            {{! <p>134 likes</p> }}
          </div>
        </div>
        <h5>
          {{t 'single_chapter.h5p.description'}}
        </h5>
        <div class="chapter-description">
          {{#if this.config.content.APP.linkify_description}}
            <p class="add-pre">
              {{linkify this.model.description class='btn btn-primary replaced'
              }}
            </p>
          {{else}}
            <p class="add-pre">
              {{this.model.description}}
            </p>
          {{/if}}
        </div>
        <hr />
        <CommentSection
          @selectedChapter={{this.model.id}}
          @chapterComments={{this.comments}}
          @chapterReplies={{this.replies}}
        />
      </div>
    </div>
  </div>
</div>
<div class="text-center">
  {{#if (eq this.me.user.username 'daph')}}
    {{#if (eq this.model.approved true)}}
      <button
        type="button"
        class="btn form-control btn-danger"
        {{on 'click' (fn this.toggleApproval this.model.id false)}}
      >
        {{t 'single_chapter.admin.unapprove'}}
      </button>
    {{else}}
      <button
        type="button"
        class="btn form-control btn-success"
        {{on 'click' (fn this.toggleApproval this.model.id true)}}
      >
        {{t 'single_chapter.admin.approve'}}
      </button>
    {{/if}}
  {{/if}}
</div>
<BsModalSimple
  @title="Report Chapter"
  @closeTitle="Close"
  @submitTitle="Submit Report"
  @size=""
  @closeButton={{true}}
  @fade={{true}}
  @backdrop={{true}}
  @backdropClose={{true}}
  @onSubmit={{this.saveFlag}}
  @open={{this.flaggingModal}}
  @onHidden={{this.toggleFlaggingModal}}
  @renderInPlace={{true}}
>
  <BsForm @model={{this.flagModel}} @onSubmit={{this.saveFlag}} as |form|>
    <form.element
      @controlType="textarea"
      @label="Reason for reporting"
      @property="comment"
    />
    <form.element @controlType="hidden" @value={{this.model}} @name="chapter" />
  </BsForm>
</BsModalSimple>
<BsPopover
  @triggerElement=".reaction-btn.like-button"
  @triggerEvents="null"
  @visible={{this.showPositiveRFPopup}}
  @placement="bottom"
  class="reaction-feedback-popover positive-feedback"
>
  <div class="d-flex justify-content-between">
    <div class="title pb-2">
      {{t 'single_chapter.reaction_popover.positive.title'}}
    </div>
    <button
      type="button"
      class="btn-close ml-1"
      {{on 'click' this.closePositiveRFPopup}}
    >
      {{t 'single_chapter.reaction_popover.button.close'}}
    </button>
  </div>
  <button
    type="button"
    class="btn btn-primary prompt-button"
    {{on 'click' this.openRRPopup}}
  >
    {{t 'single_chapter.reaction_popover.button.prompt'}}
  </button>
</BsPopover>
<BsPopover
  @triggerElement=".reaction-btn.dislike-button"
  @triggerEvents="null"
  @visible={{this.showNegativeRFPopup}}
  @placement="bottom"
  class="reaction-feedback-popover negative-feedback"
>
  <div class="d-flex justify-content-between">
    <div class="title pb-2">
      {{t 'single_chapter.reaction_popover.negative.title'}}
    </div>
    <button
      type="button"
      class="btn-close ml-1"
      {{on 'click' this.closeNegativeRFPopup}}
    >
      {{t 'single_chapter.reaction_popover.button.close'}}
    </button>
  </div>
  <button
    type="button"
    class="btn btn-primary prompt-button"
    {{on 'click' this.openRRPopup}}
  >
    {{t 'single_chapter.reaction_popover.button.prompt'}}
  </button>
</BsPopover>
<BsModal
  @open={{this.showRRPopup}}
  @backdropClose={{false}}
  @size={{'sm'}}
  @onHide={{this.hideRRModal}} as |modal|
>
  <modal.header class="modal-header border-0" />
  <modal.body>
    <Chapter::ReviewRatings
      @reaction={{this.userChapterReaction}}
      @onSubmit={{this.submitReviewRatings}}
    >
      <div class="form-group col-sm-12 mx-auto">
        <button
          type="button"
          class="btn btn-dark disabled btn-block skip-ratings-and-review-btn"
          {{on 'click' this.hideRRModal}}
        >
          {{t 'single_chapter.review_ratings.buttons.cancel'}}
        </button>
      </div>
    </Chapter::ReviewRatings>
  </modal.body>
</BsModal>
<BsModal
  @open={{this.showRRFeedbackModal}}
  @closeButton={{true}}
  @size={{'sm'}}
  class="rating-review-feedback-modal"
  @onHide={{this.hideRRFeedbackModal}} as |modal|
>
  <modal.header class="modal-header" />
  <modal.body class="modal-body">
    <div class="gesture-icon">
      <span class="ok"></span>
    </div>
    <div class="title pt-5">
      {{t 'single_chapter.review_ratings.feedback.title'}}
    </div>
    <div class="subtitle pt-4 pb-5">
      {{html-safe (t 'single_chapter.review_ratings.feedback.message')}}
    </div>
  </modal.body>
</BsModal>