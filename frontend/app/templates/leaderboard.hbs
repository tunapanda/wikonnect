          </td>
          <td>
            <LinkTo
              @route="profile"
              class="btn-sm btn btn-primary view-profile-btn"
            >
              {{t 'admin.users_and_badges.buttons.view_user'}}
            </LinkTo>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="footer-pagination d-flex justify-content-between">
      <div class="form-group form-inline">
        <label for="perPage" class="pr-3">
          {{t 'table.pagination.per_page'}}
        </label>
        <select
          id="perPage"
          class="form-control"
          {{on 'change' this.updatePerPage}}
        >
          {{#each this.perPageOptions as |opt|}}
            {{#if opt.selected}}
              <option value="{{opt.value}}" selected>
                {{opt.value}}
              </option>
            {{else}}
              <option value="{{opt.value}}">
                {{opt.value}}
              </option>
            {{/if}}
          {{/each}}
        </select>
      </div>
      <ul class="pagination">
        <li class="page-item {{if this.hasPreviousPage '' 'disabled'}}">
          <span
            class="page-link"
            role="button"
            {{on 'click' this.goToPrevPage}}
          >
            {{t 'table.pagination.previous'}}
          </span>
        </li>
        <li class="page-item {{if this.hasNextPage '' 'disabled'}}">
          <span
            class="page-link"
            role="button"
            {{on 'click' this.goToNextPage}}
          >
            {{t 'table.pagination.next'}}
          </span>
        </li>
      </ul>
    </div>
  </div>
</div>