    <div class="sub-title">
      {{t 'leaderboard.subtitle'}}
    </div>
    <table class="table leaderboard-table">
      <thead>
        <tr>
          <td></td>
          <td>
            {{t 'leaderboard.table.header.user'}}
          </td>
          <td>
            {{t 'leaderboard.table.header.points'}}
          </td>
          <td>
            {{t 'leaderboard.table.header.badges'}}
          </td>
          <td>
            {{t 'leaderboard.table.header.action'}}
          </td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="position">
            <span>
              4
            </span>
          </td>
          <td class="user-profile">
            <div class="d-flex">
              <div class="image-container">
                <img
                  src="/uploads/images/profile-placeholder.gif"
                  class="user-profile-image"
                  alt=""
                />
              </div>
              <div class="details d-flex flex-column">
                <span class="name">
                  Jane Doe
                </span>
                <span class="location">
                  Nairobi
                </span>
              </div>
            </div>
          </td>
          <td class="points">
            1100
          </td>
          <td class="badges-container">
            <div class="badges">
              <div class="mini-badge-container">
                {{svg-jar 'badge1'}}
              </div>
              <div class="mini-badge-container">
                {{svg-jar 'badge2'}}
              </div>
              <div class="mini-badge-container">
                {{svg-jar 'badge3'}}
              </div>
              <div class="extra-badges-total">
                2+
              </div>
            </div>
          </td>
          <td>
            <LinkTo
              @route="profile"
              class="btn-sm btn btn-primary view-profile-btn"
            >
              {{t 'admin.users_and_badges.buttons.view_user'}}
            </LinkTo>
          </td>
        </tr>
        <tr>
          <td class="position">
            <span>
              5
            </span>
          </td>
          <td class="user-profile">
            <div class="d-flex">
              <div class="image-container">
                <img
                  src="/uploads/images/profile-placeholder.gif"
                  class="user-profile-image"
                  alt=""
                />
              </div>
              <div class="details d-flex flex-column">
                <span class="name">
                  Marete Buda
                </span>
                <span class="location">
                  Nairobi
                </span>
              </div>
            </div>
          </td>
          <td class="points">
            1000
          </td>
          <td class="badges-container">
            <div class="badges d-flex">
              <div class="badges">
                <div class="mini-badge-container">
                  {{svg-jar 'badge1'}}
                </div>
                <div class="mini-badge-container">
                  {{svg-jar 'badge2'}}
                </div>
                <div class="mini-badge-container">
                  {{svg-jar 'badge3'}}
                </div>
              </div>
