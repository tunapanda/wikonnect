  <div class="main-content-wrapper container-lg">
    <div class="nav tabs-menu sections-menu wk-tabs-menu">
      <div class="nav-item">
        <LinkTo @route="profile.home" @model={{this.model}} class="nav-link">
          {{t "profile.nav.home"}}
        </LinkTo>
      </div>
      <div class="nav-item">
        <LinkTo @route="index" class="nav-link">
